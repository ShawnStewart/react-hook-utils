  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "jest": "^27.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0"
  },
  "scripts": {
    "dev": "cd example/ && yarn start",
    "dev:install": "cd example/ && yarn add link:.. --force",
